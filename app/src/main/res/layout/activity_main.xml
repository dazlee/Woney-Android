<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/woney_light_green"
    android:orientation="vertical"
    android:weightSum="27.5">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:weightSum="10"
        android:background="@drawable/top_background"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="16dp"
            android:src="@drawable/logo_"
            />
        <TextView
            android:id="@+id/text_woney_credits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/main_top_woney_credits"
            android:textColor="@color/woney_yellow"
            android:layout_marginRight="16dp"
            android:text="@string/woney_credits"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21.8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@color/woney_light_green"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/ButtomTabText"
        />
</LinearLayout>