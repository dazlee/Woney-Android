<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="31.25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.4"
        android:weightSum="6"
        android:background="@drawable/bg_big_winner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/winner_top_winner_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="85dp"
            android:textSize="@dimen/woney_textsize_17_5"
            android:textStyle="bold"
            android:text="@string/winner_winner"
            />

        <TextView
            android:id="@+id/winner_top_price_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:textSize="@dimen/woney_textsize_57"
            android:text="@string/winner_winner_price"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:weightSum="6"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/winner_top_winner_fb_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_fb_guest"/>
            <TextView
                android:id="@+id/winner_top_fb_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/woney_textsize_17_5"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19.85"
        android:weightSum="9"
        android:background="@color/woney_dark_green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="32dp"
            android:gravity="left|center_vertical"
            android:weightSum="7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winner_sec_price"
                android:text="@string/winner_sec_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:textSize="@dimen/woney_textsize_12_5"
                />
            <ImageView
                android:id="@+id/winner_sec_paypal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_paypal"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="32dp"
            android:gravity="left|center_vertical"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <TextView
            android:text="@string/winner_buttom_msg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/woney_textsize_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|top"
            >
            <Button
                android:id="@+id/winner_history_btn"
                android:text="@string/winner_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/woney_textsize_20"
                android:textColor="@color/woney_black"
                android:background="@drawable/btn_history"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
