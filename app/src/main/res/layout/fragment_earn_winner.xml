<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="31.25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.4"
        android:weightSum="6"
        android:background="@drawable/bg_big_winner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/winner_top_winner_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="85dp"
            android:textSize="@dimen/woney_textsize_17_5"
            android:textStyle="bold"
            android:text="@string/winner_winner"
            />

        <TextView
            android:id="@+id/winner_top_reward_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="top|center_horizontal"
            android:textSize="@dimen/woney_textsize_50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:weightSum="6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/winner_top_winner_fb_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_fb_guest"/>
            <TextView
                android:id="@+id/winner_top_fb_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textSize="@dimen/woney_textsize_17_5"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19.85"
        android:weightSum="9"
        android:background="@color/woney_dark_green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="32dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winner_sec_reward"
                android:text="@string/winner_sec_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/woney_textsize_12_5"
                />
            <ImageView
                android:id="@+id/winner_sec_paypal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_paypal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/woney_margin_32"
            android:layout_marginRight="@dimen/woney_margin_32"
            android:layout_marginBottom="@dimen/woney_margin_8"
            android:orientation="vertical"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/winner_sec_pic_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
                <ImageView
                    android:id="@+id/winner_sec_pic_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/winner_sec_pic_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
                <ImageView
                    android:id="@+id/winner_sec_pic_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/winner_sec_pic_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
                <ImageView
                    android:id="@+id/winner_sec_pic_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/winner_sec_pic_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
                <ImageView
                    android:id="@+id/winner_sec_pic_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/winner_sec_pic_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
                <ImageView
                    android:id="@+id/winner_sec_pic_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_fb_guest"/>
                <TextView
                    android:id="@+id/winner_sec_name_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:theme="@style/CommonWinnersName"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="@string/winner_buttom_msg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/woney_textsize_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|top"
            >
            <Button
                android:id="@+id/winner_history_btn"
                android:text="@string/winner_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/woney_textsize_20"
                android:textColor="@color/woney_black"
                android:background="@drawable/btn_history"
                android:onClick="clickHistory"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>