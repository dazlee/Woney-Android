<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:background="@drawable/bg_big_winner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/winner_top_winner_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/winner_winner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/winner_top_price_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/winner_winner_price"/>

            <ImageView
                android:id="@+id/winner_top_paypal_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="left"
                android:src="@drawable/icon_paypal"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="4"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/winner_top_winner_fb_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_fb_guest"/>
            <TextView
                android:id="@+id/winner_top_fb_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="7"
        android:background="@color/woney_dark_green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winner_sec_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/winner_sec_price"/>
            <ImageView
                android:id="@+id/winner_sec_paypal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/icon_paypal"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/woney_dark_green"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/winner_history_btn"
            android:text="@string/winner_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@color/com_facebook_button_background_color"
            android:textColor="@color/com_facebook_button_border_color_focused"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winner_buttom"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>
