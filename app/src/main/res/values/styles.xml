<resources>

    <!-- Base application theme. -->
    <style name="WoneyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/woney_light_green</item>
        <item name="android:textColor">@color/woney_white</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <style name="FullscreenTheme" parent="WoneyTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="WoneySplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="WoneyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/woney_textsize_12_5</item>
        <item name="android:textColor">@color/woney_white</item>
    </style>

    <style name="EarnLuckyDrawStyle">
        <item name="android:textSize">@dimen/woney_textsize_20</item>
        <item name="android:textColor">@color/woney_black</item>
    </style>

    <style name="EarnOptText">
        <item name="android:textColor">@color/woney_black</item>
        <item name="android:textSize">@dimen/woney_textsize_12_5</item>
    </style>
    <style name="EarnOptCreditsText">
        <item name="android:textColor">@color/woney_gray</item>
        <item name="android:textSize">@dimen/woney_textsize_10</item>
    </style>
    <style name="EarnOptMessageBubble">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/woney_textsize_10</item>
        <item name="android:background">@color/woney_light_gray</item>
        <item name="android:paddingTop">@dimen/message_bubble_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/message_bubble_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/message_bubble_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/message_bubble_padding_horizontal</item>
    </style>

    <style name="StyledIndicators" parent="@style/FullscreenTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/woney_dark_green</item>
        <item name="pageColor">@color/woney_yellow</item>
        <item name="radius">8dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CommonWinnersName">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/woney_textsize_10</item>
    </style>
</resources>
