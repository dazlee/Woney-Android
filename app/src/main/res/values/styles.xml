<resources>

    <!-- Base application theme. -->
    <style name="WoneyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/woney_light_green</item>
        <item name="android:textColor">@color/woney_white</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>
    
    <style name="FullscreenTheme" parent="WoneyTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:textColor">@color/woney_white</item>
    </style>

    <style name="EarnLuckyDrawStyle">
        <item name="android:textSize">@dimen/earn_top_btn_luk</item>
        <item name="android:textColor">@color/woney_black</item>
    </style>

    <style name="Setting_Login_Btn">
        <item name="android:text">@string/setting_fb_login</item>
        <item name="android:textSize">@dimen/setting_fb_btn_textsize</item>
        <item name="android:background">@color/com_facebook_button_background_color</item>
        <item name="android:textColor">@color/com_facebook_button_border_color_focused</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EarnOptText">
        <item name="android:textColor">@color/woney_black</item>
        <item name="android:textSize">12.5sp</item>
    </style>
    <style name="EarnOptCreditsText">
        <item name="android:textColor">@color/woney_gray</item>
        <item name="android:textSize">12.5sp</item>
    </style>
</resources>
